<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFrameworks>net45;netstandard2.0</TargetFrameworks>
		<LangVersion>8</LangVersion>
		<GeneratePackageOnBuild>True</GeneratePackageOnBuild>
		<AssemblyVersion>2022.6.8</AssemblyVersion>
		<FileVersion>2022.6.8</FileVersion>
		<Version>2022.6.8</Version>
		<SignAssembly>true</SignAssembly>
		<AssemblyOriginatorKeyFile>IronSoftware.Drawing.Common.snk</AssemblyOriginatorKeyFile>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="SkiaSharp" Version="1.68.1" PrivateAssets="all" Condition="'$(TargetFramework)'=='net45'" />
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="SkiaSharp" Version="2.88.0" PrivateAssets="all" Condition="'$(TargetFramework)'=='netstandard2.0'" />
		<PackageReference Include="Microsoft.Maui.Graphics" Version="6.0.300" PrivateAssets="all" Condition="'$(TargetFramework)'=='netstandard2.0'" />
		<PackageReference Include="SixLabors.ImageSharp" Version="2.0.0" PrivateAssets="all" Condition="'$(TargetFramework)'=='netstandard2.0'" />
		<PackageReference Include="System.Drawing.Common" Version="5.0.0" PrivateAssets="all" Condition="'$(TargetFramework)'=='netstandard2.0'" />
	</ItemGroup>


</Project>
